 &CONTROL
    prefix='fe',
    pseudo_dir = '../pseudos/',
    outdir = './tmp/'
    verbosity = 'high',
 /

 &SYSTEM
    ibrav = 1,
    celldm(1) = 5.42,
    nat = 2,
    ntyp = 2,
    ecutwfc = 25.0,
    ecutrho = 200.0,

    occupations = 'smearing',
    smearing    = 'mv',
    degauss     = 0.01,

    nspin = 2,
    starting_magnetization(1) =  0.6
    starting_magnetization(2) = -0.6
 /

 &ELECTRONS
 /

ATOMIC_SPECIES
# the second field, atomic mass, is not used except for MD calculations
   Fe1  1.0  Fe.pbe-nd-rrkjus.UPF
   Fe2  1.0  Fe.pbe-nd-rrkjus.UPF

ATOMIC_POSITIONS crystal
   Fe1 0.0  0.0  0.0
   Fe2 0.5  0.5  0.5

K_POINTS automatic
   8 8 8   1 1 1
